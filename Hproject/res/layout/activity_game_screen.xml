<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/ntust.finaleproject.picturegameproject">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Survival Time : "
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/survivalTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
        
         <ImageView
             android:id="@+id/lifeImageView"
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:src="@drawable/life10" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="338dp" >

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/lion" />

            <android.support.v7.widget.GridLayout
                android:id="@+id/theGrid"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                app:columnCount="9" >

                <ImageView
                    android:id="@+id/black1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="0"
                    app:layout_row="0"
                    android:src="@drawable/black" />

                <ImageView
                    android:id="@+id/black2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="0"
                    app:layout_row="1"
                    android:src="@drawable/black" />

                <ImageView
                    android:id="@+id/black3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="0"
                    app:layout_row="2"
                    android:src="@drawable/black" />

                <ImageView
                    android:id="@+id/black4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="1"
                    app:layout_row="0"
                    android:src="@drawable/black" />

                <ImageView
                    android:id="@+id/black5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="1"
                    app:layout_row="1"
                    android:src="@drawable/black" />

                <ImageView
                    android:id="@+id/black6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="1"
                    app:layout_row="2"
                    android:src="@drawable/black" />

                <ImageView
                    android:id="@+id/black7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="2"
                    app:layout_row="0"
                    android:src="@drawable/black" />

                <ImageView
                    android:id="@+id/black8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="2"
                    app:layout_row="1"
                    android:src="@drawable/black" />

                <ImageView
                    android:id="@+id/black9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="2"
                    app:layout_row="2"
                    android:src="@drawable/black" />

            </android.support.v7.widget.GridLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            
    <Button
        android:id="@+id/rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right" />

    <Button
        android:id="@+id/wrongBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wrong" />
    <Button
        android:id="@+id/playBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="play" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>